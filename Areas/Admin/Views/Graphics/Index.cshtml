@model List<Graphics>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "List Graphics";
}
<div class="text-center">
    <h1 class="display-4">List Graphics</h1>
</div>
<div class="container">
    <div class="row justify-content-end">
        <div class="col-1">
            <a asp-action="Create" class="btn btn-primary">Create</a>
        </div>
    </div>
</div>
<div class="pb-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>MemoryGB</th>
                <th>ConnectorType</th>
                <th>CoreClockMHz</th>
                <th>RecommendedPower</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var graphics in Model)
            {
                <tr>
                    <td>@graphics.GraphicsId</td>
                    <td>@graphics.Name</td>
                    <td>@graphics.MemoryGB</td>
                    <td>@graphics.ConnectorType</td>
                    <td>@graphics.CoreClockMHz</td>
                    <td>@graphics.RecommendedPower</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@graphics.GraphicsId" class="btn btn-secondary m-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@graphics.GraphicsId" class="btn btn-warning m-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@graphics.GraphicsId" class="btn btn-danger m-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
