@model AppModel.Models.Computer

@{
    ViewData["Title"] = "Delete Computer";
}

<h2>Delete Computer #@Model.ComputerId</h2>

<form asp-action="Delete" method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="ComputerId" class="control-label">Computer ID</label>
        <input asp-for="ComputerId" class="form-control" disabled />
        <input asp-for="ComputerId" type="hidden" value="@Model.ComputerId" />
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="MemoryRam" class="control-label">MemoryRam</label>
        <input asp-for="MemoryRam" class="form-control" type="number" disabled />
    </div>

    <div class="form-group">
        <label asp-for="MemoryDisk" class="control-label">MemoryDisk</label>
        <input asp-for="MemoryDisk" class="form-control" type="number" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Processor" class="control-label">Processor</label>
        <input asp-for="Processor" class="form-control" disabled />
    </div>


    <div class="form-group">
        <label asp-for="DateOfProduction" class="control-label">DateOfProduction</label>
        <input asp-for="DateOfProduction" class="form-control" type="date" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Producer.Name" class="control-label">Producer Name</label>
        <select asp-for="Producer.Name" class="form-select" aria-label="Default select example" disabled>
            <option selected>@Model.Producer.Name</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ComputersGraphics" class="control-label">Computers Graphics</label>
        <select asp-for="ComputersGraphics" class="form-select" id="multiple-select-field" data-placeholder="Choose anything" multiple disabled>
            @foreach (var item in Model.ComputersGraphics)
            {
                <option selected="selected">
                    @item.Graphics?.Name
                </option>
            }
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>